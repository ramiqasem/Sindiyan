<% provide(:title, 'Edit Group') %>

<%= cloudinary_js_config %>

<h1>Edit Group</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :Group_Name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :Descreption %>
      <%= f.email_field :description, class: 'form-control' %>

      
      <%= f.submit "Update Group", class: "btn btn-primary btn-block" %>

     <% end %>
  </div>
</div>