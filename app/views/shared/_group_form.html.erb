

<%= form_for @group do |f| %>
<%= render 'shared/error_messages', object: f.object %>



<label>
      Name of your Group
</label>


  <%= f.text_field :name, :id=> "group_name", placeholder: "Choose a name for your group", :class => "form-control" %>


<label>
    Description
</label>


  <%= f.text_field :description, :id=> "group_descriptiobn", placeholder: "Add a description for your group", :class => "form-control" %>



<label>
    Grade
</label>


<%= f.select :passcode, [['KG','KG'],['1st','1st'],['2nd','2nd'],['3rd','3rd'],['4th','4th'],['5th','5th'],['6th','6th'],['7th','7th'],['8th','8th'],['9th','9th'],['10th','10th'],['11th','11th'],['12th','12th'],['Higher Education','Higher Education']],{}, { :class => 'form-control'} %>


<br>

<%= f.submit "Create Group", class: "btn btn-primary" %>

<% end %>

