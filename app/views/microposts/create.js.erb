var active = $('div[id="tabs"] .tab-pane.active').attr("id");


if(<%=tab%> == active) {
	
	$('#<%=tab%>').prepend('<%= escape_javascript(render @micropost)%>');
	$('#<%=tab%>').children(":first").fadeIn(500).effect( "highlight", {color:"#42AD9D"}, 1000 );
} 
